{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2020",

    "rootDir": "./src",
    "outDir": "./dist",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "sourceMap": false,
    "declaration": false,
    "declarationMap": false
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules", "test"]
}
