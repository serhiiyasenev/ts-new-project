{
  "compilerOptions": {
    "target": "ES2022",
    "types": [
      "vite/client",
      "vitest/globals",
      "@testing-library/jest-dom/vitest"
    ],
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "strict": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["../shared/types/*"]
    }
  },
  "include": ["src", "test", "../shared/types"]
}
